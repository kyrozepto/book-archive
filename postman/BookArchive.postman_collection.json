						"header": [
							{
								"key": "X-API-Key",
								"value": "{{api_key}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/notes.php?id=1",
							"host": ["{{base_url}}"],
							"path": ["api", "notes.php"],
							"query": [
								{
									"key": "id",
									"value": "1"
								}
							]
						},
						"description": "Delete a note by ID"
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost/book-archive",
			"type": "string"
		},
		{
			"key": "api_key",
			"value": "your-api-key-here",
			"type": "string"
		}
	]
